{% extends 'base.html.twig' %}

{% block title %}UserPanel{% endblock %}

{% block body %}
    <div style="margin: 3%">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 ">
                    <h3 class="text-center">Twoje zajęcia grupowe</h3><br>
                    <div class="js-classes-table">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Lp.</th>
                                <th>Nazwa</th>
                                <th>Data i godzina rozpoczęcia</th>
                                <th>Data i godzina zakończenia</th>
                                <th>Trener prowadzący</th>
                                <th>Akcja</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for class in userClasses %}
                                {{ include('user_panel/_classRow.html.twig') }}
                            {% else %}
                                <tr>
                                    <td colspan="6">Nie masz żadnych
                                        nadchodzących
                                        zajęć
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                {# <th>Total</th> #}
                                <td>&nbsp;</td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <div class="col-lg-4 ">
                    <h3 class="text-center">Twoje dane</h3><br>

                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <td>Imię</td>
                            <td>{{ userData.name }}</td>
                        </tr>
                        <tr>
                            <td>Nazwisko</td>
                            <td>{{ userData.surname }}</td>
                        </tr>
                        <tr>
                            <td>Numer Telefonu</td>
                            <td>{{ userData.phoneNumber }}</td>
                        </tr>
                        <tr>
                            <td>Twój karnet</td>
                            <td>{% if userMembership != null %}
                                    {{ userMembership.membershipsType.name }}
                                    {{ userMembership.membershipsType.type }}
                                {% else %} Brak aktywnego karnetu
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <br>
                    <div class="text-center">
                        <button class="show btn btn-danger"
                                data-target="#myModal">Zmień dane
                        </button>
                    </div>

                </div>


                <div class="col-lg-8 ">
                    <button class="show btn btn-primary btn-lg btn-block"
                            data-target="#reservation">Rezerwuj sale
                    </button>
                    <h3 class="text-center">Twoje rezerwacje</h3><br>
                    <div class="js-classes-table">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Lp.</th>
                                <th>Sala</th>
                                <th>Data i godzina rozpoczęcia</th>
                                <th>Data i godzina zakończenia</th>
                                <th>Akcja</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for reservation in userReservations %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ reservation.room.name }}</td>
                                    <td>{{ reservation.datestart|date('Y-m-d H:i:s') }}</td>
                                    <td>{{ reservation.dateend|date('Y-m-d H:i:s') }}</td>
                                    <td>
                                        <a href="#"
                                           class="js-delete-rep-log"
                                           data-url="{{ path('rep_log_delete', {id:reservation.id}) }}">
                                            <span class="fa fa-trash"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">Nie masz żadnych
                                        nadchodzących
                                        zajęć
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                {# <th>Total</th> #}
                                <td>&nbsp;</td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>


            </div>

            <div class="modal" id="myModal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="modal-body" id="body">
                                <h3>Modyfikuj dane</h3><br>
                                <div class="form_edit">
                                    {{ form_start(form) }}
                                    {# {{ form_widget(form) }} #}
                                    <div class="form-group">
                                        <div class="form-contorl">
                                            <div class="">
                                                {{ form_label(form.email,'Email') }}
                                            </div>

                                        </div>

                                        {{ form_widget(form.email,{'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.email) }}

                                    </div>
                                    <div class="form-group">
                                        <div class="form-contorl">
                                            {{ form_label(form.name, 'Imie') }}
                                        </div>
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                    <div class="form-group">

                                        {{ form_label(form.surname, 'Nazwisko') }}


                                        {{ form_widget(form.surname,{'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.surname) }}
                                    </div>
                                    <div class="form-group">
                                        <div class="form-contorl">
                                            {{ form_label(form.phone_number, 'Numer telefonu') }}
                                        </div>
                                        <div class="">
                                            {{ form_widget(form.phone_number,{'attr': {'class': 'form-control'}} ) }}
                                        </div>

                                        {{ form_errors(form.phone_number) }}
                                    </div>

                                    <div class="modal-footer">
                                        <a class="btn btn-secondary"
                                           href="{{ path('user_panel') }}">Zamknij</a>
                                        {{ form_row(form.submit, {'label': 'Aktualizuj'}) }}
                                    </div>
                                    {{ form_end(form) }}

                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal" id="reservation" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="modal-body" id="body">
                                <h3>Rezeruj sale</h3><br>
                                <div class="form_edit">
                                    {{ form_start(reservationForm) }}
                                    {# {{ form_widget(form) }} #}
                                    <div class="form-group">
                                        <div class="form-contorl">
                                            {{ form_label(reservationForm.date_start, 'Data i godzina rozpoczęcia') }}
                                        </div>
                                        {{ form_widget(reservationForm.date_start) }}
                                        {{ form_errors(reservationForm.date_start) }}
                                    </div>
                                    <div class="form-group">
                                        <div class="form-contorl">
                                            {{ form_label(reservationForm.date_end, 'Data i godzina zakończenia') }}
                                        </div>
                                        {{ form_widget(reservationForm.date_end) }}
                                        {{ form_errors(reservationForm.date_end) }}
                                    </div>
                                    <div class="form-group">
                                        <div class="form-contorl">
                                            {{ form_label(reservationForm.room, 'Wybierz sale') }}
                                        </div>
                                        <div class="">
                                            {{ form_widget(reservationForm.room, {'attr': {'class': 'custom-select my-1 mr-sm-2'}}) }}
                                        </div>

                                        {{ form_errors(reservationForm.room) }}
                                    </div>

                                    <div class="modal-footer">
                                        <a class="btn btn-secondary"
                                           href="{{ path('user_panel') }}">Anuluj</a>
                                        {{ form_row(reservationForm.submit) }}
                                    </div>
                                    {{ form_end(reservationForm) }}

                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
